# Database
DATABASE_URL="postgresql://knowledge_user:knowledge_pass@localhost:5432/knowledge_db?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# Neo4j (Knowledge Graph)
NEO4J_URI="bolt://localhost:7687"
NEO4J_USER="neo4j"
NEO4J_PASSWORD="knowledge_neo4j"

# Weaviate (Vector Database)
WEAVIATE_URL="http://localhost:8080"
WEAVIATE_API_KEY=""

# Elasticsearch
ELASTICSEARCH_URL="http://localhost:9200"
ELASTICSEARCH_USERNAME="elastic"
ELASTICSEARCH_PASSWORD="knowledge_elastic"

# MinIO (File Storage)
MINIO_ENDPOINT="localhost"
MINIO_PORT="9000"
MINIO_ACCESS_KEY="knowledge_minio"
MINIO_SECRET_KEY="knowledge_minio_secret"
MINIO_BUCKET="knowledge-files"

# Server Configuration
PORT=3001
NODE_ENV=development
API_URL="http://localhost:3001"
FRONTEND_URL="http://localhost:5173"

# Security
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
ENCRYPTION_KEY="your-32-character-encryption-key-here"
BCRYPT_ROUNDS=12

# OAuth Configuration
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# AI Service
AI_SERVICE_URL="http://localhost:8000"
OPENAI_API_KEY="your-openai-api-key"

# Voice Processing
WHISPER_MODEL_PATH="/models/whisper"
TTS_MODEL_PATH="/models/tts"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES="image/*,application/pdf,text/*,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document"

# Collaboration
WEBSOCKET_ORIGINS="http://localhost:5173,http://localhost:3000"

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
